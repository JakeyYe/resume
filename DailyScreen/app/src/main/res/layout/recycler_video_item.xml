<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/recycler_item_bg_color"
    android:orientation="vertical">

    <!--<每个 item 间隔间的颜色-->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#000" />


    <!--<   每个RecycleItem   -->
    <!--宽高比怎么设置先假设一个宽高 代码动态设置-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/rela_vedio_bitmap"
            android:layout_width="120dp"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/vedio_Bitmap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff" />

            <TextView
                android:id="@+id/video_time_long"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/vedio_Bitmap"
                android:text="视频时长"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/recycler_item_bg_color"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/rela_vedio_bitmap"
            android:paddingLeft="16dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_alignParentEnd="true">


            <TextView
                android:id="@+id/video_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频名称"
                android:textSize="16sp" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/video_MemoryLong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内存大小"
                android:textSize="16sp" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/video_CreateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文件创建于时间"
                android:textSize="16sp" />


        </LinearLayout>

        <!--在外面包裹一层父布局，增大点击范围-->
        <RelativeLayout
            android:id="@+id/moreOperate"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp">

            <ImageView
                android:src="@drawable/more_operate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>
