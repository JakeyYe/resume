<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/more_operate"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:paddingRight="48dp"
    android:paddingLeft="48dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/rename"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="6dp"
        android:background="@drawable/view_more_operate_bg_left"
        android:src="@drawable/ic_rename"/>

    <ImageView
        android:id="@+id/cut"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="6dp"
        android:background="@color/jptabbar_bg_color"
        android:src="@drawable/ic_cut"/>

    <ImageView
        android:id="@+id/delete"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="6dp"
        android:background="@color/jptabbar_bg_color"
        android:src="@drawable/ic_delete"/>

    <ImageView
        android:id="@+id/share"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="6dp"
        android:background="@drawable/view_more_operate_bg_right"
        android:src="@drawable/ic_share"/>

</LinearLayout>